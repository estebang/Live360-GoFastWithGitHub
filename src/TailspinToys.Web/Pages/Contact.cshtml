@page
@{
    ViewData["Title"] = "Contact Us";
    Layout = "_Layout";
}

<section class="hero">
    <h1><i class="fas fa-envelope"></i> Contact Us</h1>
    <p>Get in touch with the TailspinToys team and learn more about our fundraising platform</p>
</section>

<div style="display: grid; gap: 2rem; margin-bottom: 2rem;">
    <!-- Main Contact Section -->
    <div style="background: var(--card-background); border-radius: 20px; padding: 3rem; box-shadow: var(--shadow); position: relative; overflow: hidden;">
        <div style="position: absolute; top: 0; left: 0; width: 100%; height: 6px; background: linear-gradient(90deg, var(--primary-color), var(--secondary-color), var(--accent-color));"></div>
        
        <div style="display: grid; grid-template-columns: 1fr auto; gap: 3rem; align-items: start;">
            <div>
                <h2 style="font-size: 2.5rem; font-weight: 700; color: var(--text-primary); margin-bottom: 1rem;">
                    Let's Connect!
                </h2>
                <p style="font-size: 1.2rem; line-height: 1.7; color: var(--text-secondary); margin-bottom: 2rem;">
                    Have questions about our platform, want to collaborate, or interested in learning more about modern development practices? 
                    We'd love to hear from you! Reach out through any of the channels below.
                </p>
                
                <!-- Contact Information -->
                <div style="display: flex; flex-direction: column; gap: 1.5rem;">
                    <!-- Email -->
                    <div style="display: flex; align-items: center; gap: 1rem; padding: 1.5rem; background: linear-gradient(135deg, #f0f9ff, #e0f2fe); border-radius: 16px; border-left: 4px solid var(--primary-color);">
                        <div style="background: var(--primary-color); color: white; width: 48px; height: 48px; border-radius: 12px; display: flex; align-items: center; justify-content: center;">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <div>
                            <div style="font-weight: 600; color: var(--text-primary); margin-bottom: 0.25rem;">Email</div>
                            <a href="mailto:esteban.garcia@lanternstudios.com" style="color: var(--primary-color); text-decoration: none; font-size: 1.1rem; display: flex; align-items: center; gap: 0.5rem;">
                                esteban.garcia@lanternstudios.com
                                <i class="fas fa-external-link-alt" style="font-size: 0.8rem;"></i>
                            </a>
                        </div>
                    </div>

                    <!-- LinkedIn -->
                    <div style="display: flex; align-items: center; gap: 1rem; padding: 1.5rem; background: linear-gradient(135deg, #f0f4ff, #e8f2ff); border-radius: 16px; border-left: 4px solid #0077b5;">
                        <div style="background: #0077b5; color: white; width: 48px; height: 48px; border-radius: 12px; display: flex; align-items: center; justify-content: center;">
                            <i class="fab fa-linkedin-in"></i>
                        </div>
                        <div>
                            <div style="font-weight: 600; color: var(--text-primary); margin-bottom: 0.25rem;">LinkedIn</div>
                            <a href="https://linkedin.com/in/estebangarcia" target="_blank" style="color: #0077b5; text-decoration: none; font-size: 1.1rem; display: flex; align-items: center; gap: 0.5rem;">
                                linkedin.com/in/estebangarcia
                                <i class="fas fa-external-link-alt" style="font-size: 0.8rem;"></i>
                            </a>
                        </div>
                    </div>

                    <!-- GitHub -->
                    <div style="display: flex; align-items: center; gap: 1rem; padding: 1.5rem; background: linear-gradient(135deg, #f8fafc, #f1f5f9); border-radius: 16px; border-left: 4px solid #24292f;">
                        <div style="background: #24292f; color: white; width: 48px; height: 48px; border-radius: 12px; display: flex; align-items: center; justify-content: center;">
                            <i class="fab fa-github"></i>
                        </div>
                        <div>
                            <div style="font-weight: 600; color: var(--text-primary); margin-bottom: 0.25rem;">GitHub</div>
